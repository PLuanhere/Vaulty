<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rounded_white"
    android:padding="24dp">

    <TextView
        android:id="@+id/tvOtpTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nhập mã xác thực (OTP)"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#22646A"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/edtOtp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nhập mã OTP"
        android:inputType="number"
        android:textColorHint="#999696"
        android:textColor="#000000"
        android:background="@drawable/bg_input"
        android:padding="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvOtpTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnOtpConfirm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Xác nhận"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:backgroundTint="#22646A"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/edtOtp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnOtpCancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Huỷ"
        android:textColor="#22646A"
        android:textStyle="bold"
        android:backgroundTint="#FFFFFF"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnOtpConfirm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>